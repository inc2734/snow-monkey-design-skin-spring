{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "dependencies": {
    "sass-basis": "^12.0.1"
  },
  "devDependencies": {
    "@wordpress/browserslist-config": "^2.7.0",
    "autoprefixer": "^9.8.6",
    "cssnano": "^4.1.10",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "clean:zip": "rimraf snow-monkey-design-skin-spring.zip",
    "start": "npm run build",
    "css:app:sass": "node-sass src/css/design-skin.scss -o .",
    "css:app:postcss": "postcss ./design-skin.css -o ./design-skin.css -c=postcss.config.js",
    "css:app": "npm-run-all -s css:app:*",
    "css:editor:sass": "node-sass src/css/editor-style.scss -o .",
    "css:editor:postcss": "postcss ./editor-style.css -o ./editor-style.css -c=postcss.config.js",
    "css:editor": "npm-run-all -s css:editor:*",
    "css": "npm-run-all -p css:*",
    "build": "npm run css",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='*.ruleset.xml' --exclude='/bin' --exclude='/tests' --exclude='package*.json' . snow-monkey-design-skin-spring && cd snow-monkey-design-skin-spring && composer install --no-dev",
    "zip:archive": "zip -9 -qmr snow-monkey-design-skin-spring.zip snow-monkey-design-skin-spring",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive"
  }
}
